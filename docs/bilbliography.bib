  author = {Avello, Pilar and Allakulov, Umrbek and Barreto-Dillon, Leonellha and Das, Binayak and Hermann-Friede, Janek and Hubendick, Lotten and Feuerstein, Lotte and Jiménez Fdez de Palencia, Alejandro},
